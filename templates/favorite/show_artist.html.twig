{% extends 'base.html.twig' %}
{% set artist_const = constant('App\\Entity\\Favorite::TYPE_ARTIST') %}
{% block body %}
    <div class="container">
        <div class="text-center">
            <img class="d-block mx-auto" src="{{ asset('build/img/spotify_logo.webp') }}" alt="" width="250"
                 height="220">
            <h2>{{ "favorite.title.artist"|trans }}</h2>
            <p class="lead">{{ "favorite.description.artist"|trans }}</p>
        </div>
        <div class="row g-4">
            {% if favorite_artists is defined and favorite_artists is not null %}
                {% for favorite in favorite_artists %}
                    {% set is_favorite = get_is_favorite(favorite.artist.id, artist_const) %}
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="card h-100">
                            {% if favorite.artist.images[0] is defined and favorite.artist.images[0] is not null %}
                                <img src="{{ favorite.artist.images[0].url }}" class="card-img-top"
                                     alt="{{ favorite.artist.name }}"
                                     style="height: 250px;">
                            {% elseif favorite.artist.images[1] is defined and favorite.artist.images[1] is not null %}
                                <img src="{{ favorite.artist.images[1].url }}" class="card-img-top"
                                     alt="{{ favorite.artist.name }}"
                                     style="height: 250px;">
                            {% elseif favorite.artist.images[2] is defined and favorite.artist.images[2] is not null %}
                                <img src="{{ favorite.artist.images[2].url }}" class="card-img-top"
                                     alt="{{ favorite.artist.name }}"
                                     style="height: 250px;">
                            {% else %}
                                <img src="{{ asset('build/img/spotify_logo.webp') }}" class="card-img-top"
                                     alt="{{ favorite.artist.name }}" style="height: 250px;">
                            {% endif %}
                            <div class="card-body">
                                <p class="card-text">{{ favorite.artist.name }}</p>
                                <a href="{{ path('app_track_info', {'id': favorite.artist.id}) }}"
                                   class="btn btn-primary">{{ "button.see"|trans }}</a>
                                {% if app.user %}
                                    <a href="#" data-favorite="{{ favorite.artist.id }}"
                                       data-bs-toggle="tooltip"
                                       data-value="{{ artist_const }}"
                                            {% if is_favorite == true %}
                                                data-url="{{ path('app_favorite_remove') }}"
                                                title="{{ "favorite.remove"|trans }}"
                                            {% else %}
                                                data-url="{{ path('app_favorite_add') }}"
                                                title="{{ "favorite.add"|trans }}"
                                            {% endif %}
                                       class="float-end green">
                                        <i class="{% if is_favorite == true %}fa-solid{% else %} fa-regular{% endif %} fa-star"></i></a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                {% if is_submitted is defined and is_submitted == true %}
                    <div class="col-12">
                        <div class="alert alert-danger" role="alert">
                            {{ "track.not_found"|trans }}
                        </div>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>
{% endblock %}
