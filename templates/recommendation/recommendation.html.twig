{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="text-center">
            <img class="d-block mx-auto" src="{{ asset('img/spotify_logo.webp') }}" alt="" width="250" height="220">
            <h2>{{ "recommended.welcome"|trans }}</h2>
            <p class="lead">{{ "recommended.description"|trans }}</p>
        </div>
        <div class="row g-4 pt-4">
            {% if recommendations is defined and recommendations is not null %}
                {% for recommendation in recommendations %}
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="card h-100">
                            <img src="{{ recommendation.pictureLink }}" class="card-img-top" alt="{{ recommendation.name }}">
                            <div class="card-body">
                                <p class="card-text">{{ recommendation.name }}</p>
                                <a href="{{ path('app_track_info', {'id': recommendation.id}) }}" class="btn btn-primary">{{ "button.see"|trans }}</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
            {% endif %}
        </div>
    </div>
{% endblock %}
